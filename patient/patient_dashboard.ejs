    <script src="/config.js"></script>
    <script src="/patient/patient.js"></script>
    
    <script>
        // Script para controlar o menu mobile (Sanduíche)
        document.addEventListener('DOMContentLoaded', () => {
            const menuToggle = document.getElementById('sidebar-toggle');
            const sidebar = document.querySelector('.dashboard-sidebar');
            const overlay = document.querySelector('.sidebar-backdrop');

            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    this.classList.toggle('is-active');
                    sidebar.classList.toggle('is-open');
                    if (overlay) overlay.classList.toggle('is-visible');
                });

                if (overlay) {
                    overlay.addEventListener('click', () => {
                        menuToggle.classList.remove('is-active');
                        sidebar.classList.remove('is-open');
                        overlay.classList.remove('is-visible');
                    });
                }
                
                // Fecha o menu ao clicar em um link
                const navLinks = document.querySelectorAll('.dashboard-sidebar .sidebar-nav a');
                navLinks.forEach(link => {
                    link.addEventListener('click', () => {
                        if (sidebar.classList.contains('is-open')) {
                            menuToggle.classList.remove('is-active');
                            sidebar.classList.remove('is-open');
                            if (overlay) overlay.classList.remove('is-visible');
                        }
                    });
                });
            }
        });
    </script>
</body>
