    <!-- Botão de Saída Rápida (Fixo) -->
    <a href="https://www.google.com" class="btn-quick-exit" title="Sair deste site imediatamente">
        <span class="icon-x">✕</span>
        <span>Saída Rápida</span>
    </a>

    <script>
        // Script de Saída Rápida
        function triggerQuickExit() {
            // Substitui a página atual pelo Google para não deixar rastro no botão "Voltar" imediato
            window.location.replace("https://www.google.com");
        }

        document.querySelector('.btn-quick-exit').addEventListener('click', function(e) {
            e.preventDefault();
            triggerQuickExit();
        });

        // Atalho: Tecla ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === "Escape") {
                triggerQuickExit();
            }
        });
    </script>

