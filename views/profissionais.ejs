        // Anima√ß√£o dos N√∫meros (Stats)
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.5
        };

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const el = entry.target;
                    const target = parseFloat(el.getAttribute('data-count'));
                    const prefix = el.getAttribute('data-prefix') || '';
                    const suffix = el.getAttribute('data-suffix') || '';
                    const decimals = parseInt(el.getAttribute('data-decimals') || '0');
                    const duration = 2000; // 2 segundos
                    const frameDuration = 1000 / 60;
                    const totalFrames = Math.round(duration / frameDuration);
                    const easeOutQuad = t => t * (2 - t);

                    let frame = 0;
                    const counter = setInterval(() => {
                        frame++;
                        const progress = easeOutQuad(frame / totalFrames);
                        const current = target * progress;

                        if (frame === totalFrames) {
                            clearInterval(counter);
                            el.textContent = prefix + target.toLocaleString('pt-BR', { minimumFractionDigits: decimals, maximumFractionDigits: decimals }) + suffix;
                        } else {
                            el.textContent = prefix + current.toLocaleString('pt-BR', { minimumFractionDigits: decimals, maximumFractionDigits: decimals }) + suffix;
                        }
                    }, frameDuration);

                    observer.unobserve(el);
                }
            });
        }, observerOptions);

        document.querySelectorAll('.stat-number').forEach(el => observer.observe(el));
    </script>
