        </div>
    </main>
    
    <%- include('partials/footer') %>

    <script src="/login.js?v=1.7"></script>
    <script>
      // Função reutilizável para alternar a senha
      function setupPasswordToggle(toggleId, inputId) {
        const toggle = document.getElementById(toggleId);
        const input = document.getElementById(inputId);

        if (toggle && input) {
            const eyeClosed = toggle.querySelector('.eye-closed');
            const eyeOpen = toggle.querySelector('.eye-open');

            toggle.addEventListener("click", () => {
                const isPassword = input.type === "password";
                input.type = isPassword ? "text" : "password";
                if (isPassword) {
                    eyeClosed.classList.remove('hidden');
                    eyeOpen.classList.add('hidden');
                } else {
                    eyeClosed.classList.add('hidden');
                    eyeOpen.classList.remove('hidden');
                }
            });
        }
      }
      setupPasswordToggle("toggleSenhaLogin", "senha-login");
    </script>
    <script>
        // Callback do Google
        async function handleCredentialResponse(response) {
            try {
                const res = await fetch('/api/auth/google', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token: response.credential })
                });

                const data = await res.json();

                if (res.ok) {
                    localStorage.setItem('Yelo_token', data.token);
                    localStorage.setItem('Yelo_user', JSON.stringify(data.user));
                    window.location.href = data.redirect;
                } else {
                    alert(data.error || 'Erro ao entrar com Google.');
                }
            } catch (error) {
                console.error('Erro Google Login:', error);
                alert('Erro de conexão ao tentar login com Google.');
            }
        }
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // 1. Tenta ler os parâmetros da URL
            const urlParams = new URLSearchParams(window.location.search);
            const emailAuto = urlParams.get('email');

            // 2. Se houver um e-mail na URL, preenche o campo
            if (emailAuto) {
                const inputEmail = document.querySelector('input[name="email"]');
                if (inputEmail) {
                    inputEmail.value = emailAuto;
                    // Opcional: Foca automaticamente no campo de senha para agilizar
                    const inputSenha = document.getElementById('senha-login');
                    if (inputSenha) inputSenha.focus();
                }
            }
        });
    </script>
