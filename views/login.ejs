<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Entrar - Yelo | Sua Saúde Mental em Dia</title>
    <meta name="description" content="Acesse sua conta na Yelo para gerenciar sessões, falar com seu psicólogo ou atualizar seu perfil com segurança.">
    
    <meta property="og:title" content="Entrar na Yelo">
    <meta property="og:description" content="Acesse sua área exclusiva de pacientes ou psicólogos.">

    <%- include('partials/head') %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@500;600;700&family=Mulish:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --fonte-titulo: 'Lora', serif;
            --fonte-corpo: 'Mulish', sans-serif;
        }
        body {
            font-family: var(--fonte-corpo);
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: var(--fonte-titulo);
            font-weight: 600;
        }
        /* Ajuste do ícone de senha */
        .form-group-password-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }
        .password-toggle-icon {
            position: absolute;
            right: 15px;
            cursor: pointer;
            color: #666;
            display: flex;
        }
        .hidden { display: none !important; }
    </style>
</head>
<body class="pagina-login">

    <%- include('partials/header') %>

    <main class="login-main ruido">
        <div class="login-container">
            <h1 class="login-titulo">Acesse sua conta</h1>
            <form class="login-form" id="form-login">                
                <p id="mensagem-login" class="mensagem-oculta"></p>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" id="email-login" name="email" autocomplete="username" required>
                </div>
                <div class="form-group">
                    <label for="senha-login">Senha</label>
                    <div class="form-group-password-wrapper">
                        <input type="password" id="senha-login" name="senha-login" autocomplete="current-password" required>
                        <span class="password-toggle-icon" id="toggleSenhaLogin">
                            <svg class="eye-closed hidden" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                            </svg>
                            <svg class="eye-open" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                        </span>
                    </div>
                </div>
                <button type="submit" class="btn-login">Entrar</button>
            </form>
            <div class="login-links">
                <a href="/recuperar-senha">Esqueceu sua senha?</a>
                <a href="/registro.html">Não tem uma conta? <strong>Cadastre-se</strong></a>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %>

    <script src="/login.js?v=1.7"></script>
    <script>
      // Função reutilizável para alternar a senha
      function setupPasswordToggle(toggleId, inputId) {
        const toggle = document.getElementById(toggleId);
        const input = document.getElementById(inputId);

        if (toggle && input) {
            const eyeClosed = toggle.querySelector('.eye-closed');
            const eyeOpen = toggle.querySelector('.eye-open');

            toggle.addEventListener("click", () => {
                const isPassword = input.type === "password";
                input.type = isPassword ? "text" : "password";
                if (isPassword) {
                    eyeClosed.classList.remove('hidden');
                    eyeOpen.classList.add('hidden');
                } else {
                    eyeClosed.classList.add('hidden');
                    eyeOpen.classList.remove('hidden');
                }
            });
        }
      }
      setupPasswordToggle("toggleSenhaLogin", "senha-login");
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // 1. Tenta ler os parâmetros da URL
            const urlParams = new URLSearchParams(window.location.search);
            const emailAuto = urlParams.get('email');

            // 2. Se houver um e-mail na URL, preenche o campo
            if (emailAuto) {
                const inputEmail = document.querySelector('input[name="email"]');
                if (inputEmail) {
                    inputEmail.value = emailAuto;
                    // Opcional: Foca automaticamente no campo de senha para agilizar
                    const inputSenha = document.getElementById('senha-login');
                    if (inputSenha) inputSenha.focus();
                }
            }
        });
    </script>
</body>
</html>