<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Autenticando... - Yelo</title>
    <style>
        body { display: flex; justify-content: center; align-items: center; height: 100vh; font-family: sans-serif; background-color: #1B4332; color: white; }
        .container { text-align: center; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Autenticando...</h1>
        <p>Você será redirecionado em breve.</p>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const params = new URLSearchParams(window.location.search);
            const token = params.get('token');
            const type = params.get('type');
            const name = params.get('name');
            const redirectUrl = params.get('redirect'); // Backend envia 'redirect', não 'dashboard'
            
            if (token) {
                // Salva o token e dados do usuário
                localStorage.setItem('Yelo_token', token); 
                if (type) localStorage.setItem('Yelo_user_type', type);
                if (name) localStorage.setItem('Yelo_user_name', name);
                
                // Redireciona com pequeno delay para garantir gravação
                setTimeout(() => {
                    window.location.href = redirectUrl || '/';
                }, 200);
            } else {
                // Se der erro, volta para o login
                setTimeout(() => { window.location.href = '/login'; }, 2000);
            }
        });
    </script>
</body>
</html>