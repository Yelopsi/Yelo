    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const marqueeContainer = document.getElementById('marquee-container');
            const MIN_ITEMS = 20; // M√≠nimo para o loop ficar bonito
            
            // Cores da marca para placeholders
            const brandColors = ['#1B4332', '#FFEE8C', '#2D6A4F', '#F4D35E'];

            // 1. Buscar dados do Backend
            let professionals = [];
            try {
                const response = await fetch('/api/public/psychologists/list');
                if (response.ok) {
                    professionals = await response.json();
                }
            } catch (error) {
                console.warn('Erro ao carregar psic√≥logos, usando mocks.', error);
            }

            // 2. L√≥gica de Fallback / Preenchimento
            // Se tiver menos que o m√≠nimo, completa com mocks
            while (professionals.length < MIN_ITEMS) {
                const isColor = Math.random() > 0.5;
                professionals.push({
                    id: 'mock-' + Math.random(),
                    isMock: true,
                    color: brandColors[Math.floor(Math.random() * brandColors.length)],
                    initial: 'Y'
                });
            }

            // Embaralha para dar dinamismo
            professionals.sort(() => Math.random() - 0.5);

            // 3. Cria√ß√£o das Linhas (3 linhas)
            // Dividimos os profissionais em 3 grupos
            const chunkSize = Math.ceil(professionals.length / 3);
            const rowsData = [
                professionals.slice(0, chunkSize),
                professionals.slice(chunkSize, chunkSize * 2),
                professionals.slice(chunkSize * 2)
            ];

            // Fun√ß√£o para criar o HTML de um card
            const createCard = (psi) => {
                const div = document.createElement('div');
                div.className = 'psy-avatar-card';
                
                if (psi.fotoUrl && !psi.isMock) {
                    const img = document.createElement('img');
                    img.src = psi.fotoUrl;
                    img.alt = psi.nome || 'Psic√≥logo Yelo';
                    img.loading = "lazy"; // Performance
                    div.appendChild(img);
                } else {
                    const placeholder = document.createElement('div');
                    placeholder.className = 'psy-avatar-placeholder';
                    placeholder.style.backgroundColor = psi.color || '#1B4332';
                    placeholder.textContent = psi.initial || 'Y';
                    if(psi.color === '#FFEE8C' || psi.color === '#F4D35E') placeholder.style.color = '#1B4332';
                    div.appendChild(placeholder);
                }
                return div;
            };

            // Renderiza as 3 linhas
            rowsData.forEach((rowItems, index) => {
                const row = document.createElement('div');
                // Alterna dire√ß√£o: Esquerda, Direita, Esquerda
                row.className = `marquee-row ${index % 2 === 0 ? 'left' : 'right'}`;
                
                // Duplica o conte√∫do para criar o loop infinito perfeito (A + A)
                // O CSS vai animar de 0 a -50%
                const content = [...rowItems, ...rowItems]; 
                
                content.forEach(item => {
                    row.appendChild(createCard(item));
                });

                marqueeContainer.appendChild(row);
            });

            // Mostra o container (fade in)
            marqueeContainer.style.opacity = '1';
        });
    </script>
