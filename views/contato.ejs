    <script>
        const form = document.querySelector('.form-contato');
        if(form) {
            form.onsubmit = function(e) {
                e.preventDefault();
                var nome = this.nome.value.trim();
                var email = this["email-contato"].value.trim();
                var mensagem = this.mensagem.value.trim();
                var status = this.querySelector('.form-status');
                
                if (!nome || !email || !mensagem) {
                    status.textContent = 'Preencha todos os campos obrigat√≥rios.';
                    status.style.color = '#e22';
                    return false;
                }
                
                this.querySelector('button').disabled = true;
                this.querySelector('button').textContent = 'Enviando...';
                
                // Simula√ß√£o de envio
                setTimeout(() => { 
                    this.querySelector('button').disabled = false;
                    this.querySelector('button').textContent = 'Enviar Mensagem';
                    status.textContent = 'Mensagem enviada com sucesso! Responderemos em breve.';
                    status.style.color = '#198754';
                    this.reset();
                }, 1500);
            };
        }
