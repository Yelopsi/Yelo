<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <title>Registro de Psicólogo - Yelo</title>
    <%- include('partials/head') %>
    
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <link rel="stylesheet" href="/css/style.css"> 
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Wrapper para posicionar o ícone dentro do input */
        .input-wrapper-senha {
            position: relative;
            display: flex;
            align-items: center;
        }
        
        .input-wrapper-senha input {
            padding-right: 45px; /* Espaço para o ícone não ficar em cima do texto */
        }

        /* Botão do ícone (Olho) */
        .btn-toggle-senha {
            position: absolute;
            right: 15px;
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            padding: 0;
            display: flex;
            align-items: center;
        }

        /* Força o botão de registro a ser Verde */
        .btn-verde-sucesso {
            background-color: #28a745 !important; /* Verde padrão de sucesso */
            color: white !important;
            border: none;
            transition: background-color 0.3s;
        }
        .btn-verde-sucesso:hover {
            background-color: #218838 !important; /* Verde mais escuro no hover */
        }

        /* Aumenta o tamanho do checkbox */
        .form-group-checkbox input[type="checkbox"] {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }
        .dica-senha {
            font-size: 0.8rem;
            color: #666;
            margin-top: 5px;
        }

        /* --- FIX DE LAYOUT E UX --- */
        /* Resolve o problema do conteúdo cortado no topo em telas pequenas */
        body.login-main {
            align-items: flex-start !important; /* Começa do topo, permitindo scroll */
            padding-top: 40px;
            padding-bottom: 40px;
            height: auto !important; /* Permite que o corpo cresça */
            min-height: 100vh;
        }
        
        .login-container {
            margin: auto; /* Centraliza verticalmente se sobrar espaço, senão apenas rola */
        }

        /* Garante a formatação correta do botão do Google */
        .g_id_signin {
            display: flex;
            justify-content: center;
            width: 100%;
            margin-bottom: 20px;
        }
    </style>
</head>

<body class="login-main">
    
    <div class="login-container">
            <img src="/assets/logos/logo-escura.png" alt="Logo Yelo" class="logo-auth" style="max-width: 150px; margin-bottom: 20px;">
            <h2>Registro de Psicólogo</h2>
            
            <!-- Botão do Google -->
            <div id="g_id_onload"
                 data-client_id="283886540808-qj13i35cfagnp9rc6qou1o66mdv3ppkl.apps.googleusercontent.com"
                 data-callback="handlePsiGoogleRegister">
            </div>
            <div class="g_id_signin"
                 data-type="standard"
                 data-size="large"
                 data-theme="outline"
                 data-text="signup_with"
                 data-shape="pill"
                 data-logo_alignment="left">
            </div>

            <div class="divisor"><span>OU PREENCHA MANUALMENTE</span></div>

            <form id="form-registro-psi">
                
                <div class="form-group">
                    <label for="nome-completo">Nome Completo</label>
                    <input type="text" id="nome-completo" name="nome-completo" required>
                </div>
                
                <div class="form-group">
                    <label for="crp">Número do CRP</label>
                    <input type="text" id="crp" name="crp" required inputmode="numeric">
                </div>

                <div class="form-group">
                    <label for="documento">CPF ou CNPJ</label>
                    <input type="text" id="documento" name="documento" required inputmode="numeric">
                    <small id="doc-feedback" style="display:none; color: green; font-size: 0.8rem; margin-top: 5px;"></small>
                </div>

                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" id="email" name="email" required autocapitalize="none" autocomplete="email" autocorrect="off">
                </div>
                
                <div class="form-group" id="container-senha">
                    <label for="senha">Senha</label>
                    <div class="input-wrapper-senha">
                        <input type="password" id="senha" name="senha" required autocapitalize="none" autocomplete="new-password" autocorrect="off">
                        <button type="button" class="btn-toggle-senha" onclick="toggleSenha('senha', this)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                        </button>
                    </div>
                    <div class="dica-senha">Mínimo de 8 caracteres, com maiúscula, número e símbolo.</div>
                </div>

                <div class="form-group" id="container-confirmar-senha">
                    <label for="confirmar-senha">Confirmar Senha</label>
                    <div class="input-wrapper-senha">
                        <input type="password" id="confirmar-senha" name="confirmar-senha" required autocapitalize="none" autocomplete="new-password" autocorrect="off">
                        <button type="button" class="btn-toggle-senha" onclick="toggleSenha('confirmar-senha', this)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                        </button>
                    </div>
                </div>
                
                <div class="form-group-checkbox">
                    <input type="checkbox" id="termos-aceite" name="termos-aceite" required>
                    <label for="termos-aceite">Eu li e aceito os <a href="/termos.html" target="_blank">Termos e Condições</a>.</label>
                </div>
                
                <button type="submit" class="btn btn-principal btn-verde-sucesso">Registrar</button>
            </form>
            <p id="mensagem-registro-psi" class="mensagem-oculta"></p>
            <p class="link-auth">Já tem uma conta? <a href="/login.html">Faça login aqui</a></p>
    </div>

    <script src="https://unpkg.com/imask"></script>
    <script src="/config.js"></script>
    <script src="/psi_registro.js"></script>
    <script>
        function toggleSenha(id) {
            const input = document.getElementById(id);
            const btn = input.nextElementSibling; // Pega o botão do ícone
            
            if (input.type === "password") {
                input.type = "text";
                btn.style.color = "#1B4332"; // Muda a cor do ícone para indicar "visível"
            } else {
                input.type = "password";
                btn.style.color = "#666"; // Volta a cor original
            }
        }

        // Variável para armazenar o token se o usuário usar o Google
        let googleRegisterToken = null;

        async function handlePsiGoogleRegister(response) {
            try {
                // 1. Verifica no backend se já existe ou se é novo
                const res = await fetch('/api/auth/google', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        token: response.credential,
                        targetRole: 'psychologist' // Flag importante
                    })
                });

                const data = await res.json();

                if (res.ok) {
                    if (data.isNewUser) {
                        // --- UX: Preenche o formulário e simplifica ---
                        document.getElementById('nome-completo').value = data.googleData.name;
                        const emailInput = document.getElementById('email');
                        emailInput.value = data.googleData.email;
                        emailInput.readOnly = true;
                        emailInput.style.backgroundColor = "#f0f0f0";

                        // Esconde campos de senha (autenticação delegada)
                        document.getElementById('container-senha').style.display = 'none';
                        document.getElementById('container-confirmar-senha').style.display = 'none';
                        
                        // Preenche com senha dummy para passar na validação do frontend (psi_registro.js)
                        document.getElementById('senha').value = 'GoogleAuth123!';
                        document.getElementById('confirmar-senha').value = 'GoogleAuth123!';

                        // Salva o token para enviar no registro
                        googleRegisterToken = response.credential;

                        // Feedback visual
                        const msg = document.getElementById('mensagem-registro-psi');
                        msg.textContent = `Olá, ${data.googleData.name}! Complete seu cadastro com CRP e CPF abaixo.`;
                        msg.className = 'mensagem-sucesso';
                        msg.style.display = 'block';
                    } else {
                        // Se já existe, loga direto
                        localStorage.setItem('Yelo_token', data.token);
                        localStorage.setItem('Yelo_user', JSON.stringify(data.user));
                        window.location.href = data.redirect;
                    }
                } else {
                    alert(data.error || 'Erro ao conectar com Google.');
                }
            } catch (error) {
                console.error('Erro Google Psi:', error);
            }
        }

        // Intercepta o fetch global para injetar o token do Google no corpo da requisição de registro
        const originalFetch = window.fetch;
        window.fetch = function(url, options) {
            if (url && url.includes && (url.includes('/register') || url.includes('/psychologists')) && options && options.method === 'POST' && googleRegisterToken) {
                try {
                    const body = JSON.parse(options.body);
                    body.googleToken = googleRegisterToken;
                    options.body = JSON.stringify(body);
                } catch(e) { /* Ignora se não for JSON */ }
            }
            return originalFetch(url, options);
        };
    </script>
</body>
</html>