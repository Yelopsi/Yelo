<script>
    document.addEventListener("DOMContentLoaded", () => {
        fetch('/api/demand/visit', { 
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ page: window.location.pathname })
        }).catch(err => console.log('Analytics offline'));

        // --- LÓGICA DO BANNER DE COOKIES ---
        const cookieBanner = document.getElementById('cookie-banner');
        const acceptBtn = document.getElementById('accept-cookies');

        // Verifica se o usuário já aceitou antes
        if (!localStorage.getItem('yelo_privacy_accepted')) {
            // Pequeno delay para não ser agressivo assim que o site carrega
            setTimeout(() => {
                if (cookieBanner) cookieBanner.classList.add('show');
            }, 1000); // 1 segundo de espera
        }

        // Ação do Botão
        if (acceptBtn) {
            acceptBtn.addEventListener('click', function() {
                // 1. Salva a decisão no navegador do usuário
                localStorage.setItem('yelo_privacy_accepted', 'true');
                // 2. Remove a classe que mostra o banner (faz ele descer)
                if (cookieBanner) cookieBanner.classList.remove('show');
            });
        }
    });
</script>