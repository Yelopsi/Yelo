<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Blog | Yelo</title>
    <meta name="description" content="Reflexões, psicoeducação e conteúdos sobre saúde mental.">
    <%- include('partials/head') %>
    
    <style>
        /* --- ESTRUTURA GERAL --- */
        .pagina-blog {
            padding-top: 140px;
            padding-bottom: 80px;
            background-color: #fdfaf6;
            min-height: 100vh;
        }

        .container-blog {
            max-width: 1100px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* --- HERO (Título) --- */
        .blog-hero {
            text-align: center;
            margin-bottom: 50px;
            padding: 20px;
        }
        .blog-hero h1 {
            font-family: 'New Kansas', serif;
            font-size: 3.5rem;
            color: #1B4332;
            margin: 0 0 15px 0;
        }
        .blog-hero p {
            font-family: 'Lato', sans-serif;
            font-size: 1.25rem;
            color: #555;
            max-width: 700px;
            margin: 0 auto;
            line-height: 1.6;
        }

        /* --- POST DESTAQUE (CORRIGIDO: Menor e Proporcional) --- */
        .post-destaque {
            display: grid;
            /* Imagem ocupa 40%, Texto ocupa 60% (Equilíbrio melhor) */
            grid-template-columns: 0.7fr 1fr; 
            background: #fff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 25px rgba(0,0,0,0.06);
            margin-bottom: 60px;
            text-decoration: none;
            color: inherit;
            /* TRAVA A ALTURA: Maior que os comuns, mas não gigante */
            height: 340px; 
            border: 1px solid rgba(0,0,0,0.02);
            transition: transform 0.3s ease;
        }
        .post-destaque:hover { transform: translateY(-4px); }

        .destaque-img-wrapper {
            position: relative;
            height: 100%;
            overflow: hidden;
            border-right: 1px solid #f0f0f0;
        }
        .destaque-img-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Garante preenchimento perfeito */
            transition: transform 0.6s ease;
        }
        .post-destaque:hover .destaque-img-wrapper img { transform: scale(1.03); }

        .destaque-conteudo {
            padding: 40px; /* Reduzi um pouco o padding para caber tudo */
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* TAG "MAIS RECENTE" (Blindada e Visível) */
        .tag-destaque {
            background-color: #1B4332 !important;
            color: #ffffff !important;
            padding: 6px 14px;
            border-radius: 4px;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-weight: 800;
            display: inline-block;
            margin-bottom: 15px;
            box-shadow: 0 3px 8px rgba(0,0,0,0.15);
            border: none;
            opacity: 1 !important;
            width: fit-content;
        }

        .destaque-conteudo h2 {
            font-family: 'New Kansas', serif;
            font-size: 2rem; /* Tamanho controlado */
            color: #1B4332;
            margin: 0 0 15px 0;
            line-height: 1.15;
            
            /* Limita título a 2 linhas */
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .destaque-conteudo p {
            font-size: 1rem;
            color: #666;
            line-height: 1.6;
            margin-bottom: 25px;
            
            /* Limita resumo a 3 linhas */
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        /* Rodapé do destaque (Autor) */
        .autor-destaque {
            display: flex;
            align-items: center;
            gap: 12px;
            border-top: 1px solid #eee;
            padding-top: 20px;
            margin-top: auto;
        }
        .autor-destaque img { width: 32px; height: 32px; border-radius: 50%; object-fit: cover; }
        .autor-destaque span { font-size: 0.9rem; font-weight: 600; color: #333; }

        /* --- GRID INFERIOR (Cards Menores) --- */
        .blog-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 30px; }
        .post-card { background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 15px rgba(0,0,0,0.03); transition: transform 0.3s; height: 100%; display: flex; flex-direction: column; }
        .post-card:hover { transform: translateY(-5px); }
        .post-card img { width: 100%; height: 200px; object-fit: cover; }
        .post-card-body { padding: 25px; flex: 1; display: flex; flex-direction: column; }
        .post-card-body h3 { font-family: 'New Kansas', serif; font-size: 1.4rem; color: #1B4332; margin: 10px 0; line-height: 1.3; }
        .post-card-body p { font-size: 0.95rem; color: #666; line-height: 1.5; margin-bottom: 20px; flex: 1; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden; }
        .post-card-footer { border-top: 1px solid #eee; padding-top: 15px; display: flex; align-items: center; justify-content: space-between; margin-top: auto; }

        /* MOBILE */
        @media (max-width: 900px) {
            .blog-hero h1 { font-size: 2.8rem; }
            /* No celular, empilha e deixa a altura automática */
            .post-destaque { grid-template-columns: 1fr; height: auto; min-height: auto; }
            .destaque-img-wrapper { height: 250px; order: -1; }
            .destaque-conteudo { padding: 30px; }
            .destaque-conteudo h2 { font-size: 1.8rem; }
        }
    </style>
</head>
<body>

<%- include('partials/header') %>

<main class="pagina-blog">
    
    <div class="container-blog">
        
        <div class="blog-hero">
            <h1>Blog Yelo</h1>
            <p>Reflexões e ferramentas para sua jornada de autoconhecimento e bem-estar.</p>
        </div>

        <% if (posts && posts.length > 0) { %>
            
            <% const destaque = posts[0]; %>
            <a href="/blog/post/<%= destaque.id %>" class="post-destaque">
                <div class="destaque-img-wrapper">
                    <img src="<%= destaque.imagem_url || getImagemFixa(destaque.id) %>" alt="<%= destaque.titulo %>">
                </div>
                
                <div class="destaque-conteudo">
                    <span class="tag-destaque">MAIS RECENTE</span>
                    <h2><%= destaque.titulo %></h2>
                    <p><%= destaque.conteudo.substring(0, 180) %>...</p>
                    
                    <div class="autor-destaque">
                        <img src="<%= destaque.autor && destaque.autor.fotoUrl ? formatImageUrl(destaque.autor.fotoUrl) : 'https://placehold.co/40x40' %>" alt="Autor">
                        <span>Psi. <%= destaque.autor ? destaque.autor.nome.split(' ')[0] : 'Yelo' %></span>
                    </div>
                </div>
            </a>

            <% const outros = posts.slice(1); %>
            <% if (outros.length > 0) { %>
                <div class="blog-grid">
                    <% outros.forEach(post => { %>
                        <article class="post-card">
                            <a href="/blog/post/<%= post.id %>" class="card-link">
                                <img src="<%= post.imagem_url || getImagemFixa(post.id) %>" alt="<%= post.titulo %>" class="card-img">
                                <div class="post-card-body">
                                    <span class="card-date">
                                        <%= new Date(post.created_at).toLocaleDateString('pt-BR', { day: 'numeric', month: 'short' }) %>
                                    </span>
                                    <h3><%= post.titulo %></h3>
                                    <p><%= post.conteudo.substring(0, 100) %>...</p>
                                    
                                    <div class="post-card-footer" style="display: flex; justify-content: space-between; align-items: center; margin-top: auto; padding-top: 15px; border-top: 1px solid #eee;">
                                        
                                        <div style="display: flex; align-items: center; gap: 10px;">
                                            <img src="<%= post.autor && post.autor.fotoUrl ? formatImageUrl(post.autor.fotoUrl) : 'https://placehold.co/30x30' %>" alt="Autor" style="width: 28px; height: 28px; border-radius: 50%; object-fit: cover;">
                                            <span style="font-size: 0.85rem; color: #555; font-weight: 600;">Psi. <%= post.autor ? post.autor.nome.split(' ')[0] : 'Yelo' %></span>
                                        </div>

                                        <button onclick="darLike(event, '<%= post.id %>')" data-post-id="<%= post.id %>" style="background: none; border: none; cursor: pointer; display: flex; align-items: center; gap: 5px; color: #555; transition: transform 0.2s;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'">
                                            
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" 
                                                 fill="<%= post.curtidas > 0 ? '#e63946' : 'none' %>" 
                                                 stroke="<%= post.curtidas > 0 ? '#e63946' : 'currentColor' %>" 
                                                 stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                            </svg>

                                            <span id="likes-<%= post.id %>" style="font-size: 0.9rem; font-weight: bold; color: #333;"><%= post.curtidas || 0 %></span>
                                        </button>
                                    </div>
                                </div>
                            </a>
                        </article>
                    <% }) %>
                </div>
            <% } %>

        <% } else { %>
            <div style="text-align: center; padding: 80px 0; color: #888;">
                <p style="font-size: 1.2rem;">Ainda não temos artigos publicados.</p>
            </div>
        <% } %>

    </div>

</main>

<%- include('partials/footer') %>

<script>
    // 1. Ao carregar a página: Verifica o localStorage e pinta os corações já curtidos
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelectorAll('[data-post-id]').forEach(btn => {
            const pid = btn.getAttribute('data-post-id');
            // Se já curtiu, pinta de vermelho
            if (localStorage.getItem('liked_' + pid)) {
                const svg = btn.querySelector('svg');
                svg.setAttribute('fill', '#e63946');
                svg.setAttribute('stroke', '#e63946');
                svg.style.fill = "#e63946";
            }
        });
    });

    // 2. Ação de Clique
    async function darLike(event, postId) {
        event.preventDefault(); 
        event.stopPropagation();
        
        const contador = document.getElementById(`likes-${postId}`);
        const btn = event.currentTarget; 
        const svg = btn.querySelector('svg');
        
        // Verifica estado atual
        const jaCurtiu = localStorage.getItem('liked_' + postId);
        const action = jaCurtiu ? 'unlike' : 'like';

        try {
            const response = await fetch(`/blog/post/${postId}/like`, { 
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ action: action })
            });
            const data = await response.json();
            
            if (data.success) {
                contador.innerText = data.curtidas;
                
                if (action === 'like') {
                    // Curtiu: Preenche e borda vermelha
                    localStorage.setItem('liked_' + postId, 'true');
                    svg.setAttribute('fill', '#e63946');
                    svg.setAttribute('stroke', '#e63946');
                } else {
                    // Descurtiu: Remove preenchimento e volta borda para cor original
                    localStorage.removeItem('liked_' + postId);
                    svg.setAttribute('fill', 'none');
                    svg.setAttribute('stroke', 'currentColor');
                }
            }
        } catch (error) { console.error('Erro:', error); }
    }
</script>

</body>
</html>